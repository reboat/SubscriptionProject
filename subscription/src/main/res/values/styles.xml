<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="SubscriptionTheme" parent="CoreTheme.Base">
        <item name="subscription_arrow">@drawable/arrow</item>
        <item name="subscription_home_background">@color/subscription_background_color</item>
        <item name="column_subscription_text_color">@color/column_subscription_text_color_selector
        </item>
        <item name="subscription_button_background">@drawable/subscription_btn_selector</item>
        <item name="header_my_subscription_divider_color">
            @color/header_my_subscription_divider_color
        </item>
        <item name="more_subscription">@drawable/more_subscription</item>
        <item name="subscription">@drawable/subscription_icon</item>
        <item name="category_text_color">@color/category_text_color_selector</item>
        <item name="search_shape">@drawable/search_shape</item>
        <item name="category_divider_color">@color/category_divider_color</item>
        <item name="detail_column_description_color">@color/detail_column_description_color</item>
        <item name="detail_column_title_color">@color/detail_column_title_color</item>
        <item name="detail_btn_text_color">@color/detail_btn_text_color_selector</item>
        <item name="detail_sub_btn">@drawable/detail_sub_btn</item>
        <item name="detail_sub_left_pic">@drawable/detail_sub_left_pic</item>
        <item name="detail_column_info_color">@color/detail_column_info_color</item>
        <item name="subscription_search_icon">@drawable/subscription_search</item>
        <item name="subscription_search_background_color">#ffffff</item>
    </style>

    <style name="SubscriptionThemeNight" parent="CoreThemeNight.Base">
        <item name="subscription_arrow">@drawable/arrow_night</item>
        <item name="subscription_home_background">@color/subscription_background_color_night</item>
        <item name="column_subscription_text_color">
            @color/column_subscription_text_color_selector_night
        </item>
        <item name="subscription_button_background">@drawable/subscription_btn_selector_night</item>
        <item name="header_my_subscription_divider_color">
            @color/header_my_subscription_divider_color_night
        </item>
        <item name="more_subscription">@drawable/more_subscription_night</item>
        <item name="subscription">@drawable/subscription_icon_night</item>
        <item name="category_text_color">@color/category_text_color_selector_night</item>
        <item name="search_shape">@drawable/search_shape_night</item>
        <item name="category_divider_color">@color/category_divider_color_night</item>
        <item name="detail_column_description_color">@color/detail_column_description_color_night
        </item>
        <item name="detail_column_title_color">@color/detail_column_title_color_night</item>
        <item name="detail_btn_text_color">@color/detail_btn_text_color_selector_night</item>
        <item name="detail_sub_btn">@drawable/detail_sub_btn_night</item>
        <item name="detail_sub_left_pic">@drawable/detail_sub_left_pic_night</item>
        <item name="detail_column_info_color">@color/detail_column_info_color_night</item>
        <item name="subscription_search_icon">@drawable/subscription_search_night</item>
        <item name="subscription_search_background_color">#2a2a2a</item>
    </style>

</resources>
