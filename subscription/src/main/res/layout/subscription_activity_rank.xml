<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.FitWindowsLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/_ffffff"
        >
        <ImageView
            android:id="@+id/rank_back"
            android:layout_width="42dp"
            android:layout_height="@dimen/toolbar_normal_height"
            android:background="?attr/actionBarItemBackground"
            android:paddingRight="7dp"
            android:scaleType="center"
            app:maskColor="@android:color/transparent"
            android:src="@drawable/zjnews_back_red"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/_222222"
            android:text="所有排名"
            android:layout_centerInParent="true"
            android:textSize="@dimen/ts_18sp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:id="@+id/tab_bar"
            android:layout_width="92dp"
            android:layout_height="24dp"
            android:background="@drawable/module_sub_bg_tab_layout"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"

            >

            <FrameLayout
                android:id="@+id/tab_week_bar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/module_sub_bg_tab_item"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="周度"
                    android:textColor="@color/module_sub_tab_tc_text"
                    android:textSize="@dimen/ts_12sp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/tab_month_bar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/module_sub_bg_tab_item">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="月度"
                    android:textColor="@color/module_sub_tab_tc_text"
                    android:textSize="@dimen/ts_12sp" />

            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:background="@drawable/rank_top_bg"
        >
        <TextView
            android:id="@+id/top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起航号影响力排行榜"
            android:textColor="@color/_ffffff"
            android:textSize="@dimen/ts_16sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            />
        <TextView
            android:id="@+id/top_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(2019.10.11-2019.12.11)"
            android:textColor="@color/_ffffff"
            android:textSize="@dimen/ts_12sp"
            android:textStyle="bold"
            android:layout_below="@+id/top_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            />
        <com.zjrb.daily.news.ui.widget.SlidingTabLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tab_layout"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:tabBackground="?attr/selectableItemBackgroundBorderless"
            app:tl_indicator_color="@color/_ffffff"
            app:tl_indicator_width="17dp"
            app:tl_indicator_height="4dp"
            app:tl_tab_padding="26dp"
            app:tl_textSelectColor="@color/_ffffff"
            app:tl_textUnselectColor="@color/_efefef"
            app:tl_textselectSize="16sp"
            app:tl_textUnselectSize="14sp"
            android:layout_alignParentBottom="true"
            >

        </com.zjrb.daily.news.ui.widget.SlidingTabLayout>

    </RelativeLayout>


    <com.zjrb.core.ui.widget.CompatViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</android.support.v7.widget.FitWindowsLinearLayout>
