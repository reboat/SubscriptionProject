<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/_ffffff_202124"
                android:fitsSystemWindows="true"
                android:orientation="vertical">


    <ImageView
        android:id="@+id/detail_empty_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:src="@drawable/detail_back_arrow"
        android:layout_marginTop="26dp"
        />

    <View
        android:layout_below="@+id/detail_empty_back"
        android:id="@+id/detail_empty_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/detail_empty_divider"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/empty_subscription"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="该内容已不存在"
            android:textColor="#484848"
            android:textSize="14sp"
            />
    </LinearLayout>
</RelativeLayout>