<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/_f5f5f5_191919"
              android:orientation="vertical"


    >

    <RelativeLayout
        android:id="@+id/all_classify"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/_f5f5f5"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="总榜"
            android:textColor="@color/_222222"
            android:textSize="@dimen/ts_16sp"
            />

        <CheckBox
            android:id="@+id/all_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/_e7e7e7"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/zw_classify"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/_f5f5f5"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="政务榜"
            android:textColor="@color/_222222"
            android:textSize="@dimen/ts_16sp"
            />

        <CheckBox
            android:id="@+id/zw_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/_e7e7e7"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dt_classify"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/_f5f5f5"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="党团榜"
            android:textColor="@color/_222222"
            android:textSize="@dimen/ts_16sp"
            />

        <CheckBox
            android:id="@+id/dt_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/_e7e7e7"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/sh_classify"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/_f5f5f5"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="生活榜"
            android:textColor="@color/_222222"
            android:textSize="@dimen/ts_16sp"
            />

        <CheckBox
            android:id="@+id/sh_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/_e7e7e7"
            />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/_ffffff_202124"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="@string/module_biz_save_cancel"
        android:textColor="@color/_484848_7a7b7d"
        android:textSize="@dimen/ts_14sp"/>

</LinearLayout>