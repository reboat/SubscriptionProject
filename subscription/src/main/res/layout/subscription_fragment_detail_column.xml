<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/subscription_background_color">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/_ffffff">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:contentScrim="@color/subscription_background_color"
            app:layout_collapseMode="parallax"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|enterAlwaysCollapsed"
            app:scrimVisibleHeightTrigger="80dp"
            app:statusBarScrim="@color/subscription_background_color">


            <RelativeLayout
                android:id="@+id/backdrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView

                    android:id="@+id/detail_column_header_imageView"
                    android:layout_width="match_parent"
                    android:layout_height="198dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/detail_column_default" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="198dp"
                    android:background="#7f000000" />

                <ImageView
                    android:id="@+id/detail_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="7dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="40dp"
                    android:src="@drawable/ic_top_bar_back_white" />

                <ImageView
                    android:id="@+id/detail_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="11.5dp"
                    android:scaleType="center"
                    android:src="@drawable/zjnews_detail_theme_navigation_share_icon"
                    app:maskColor="@android:color/transparent" />

                <com.zjrb.core.ui.widget.ShadowLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_back"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="4dp"
                    app:shadowColor="#80dbdbdb"
                    app:shadowDx="0dp"
                    app:shadowDy="4dp"
                    app:shadowRadius="12dp"
                    app:shadowShape="rectangle"
                    app:shadowSide="bottom|left|right">

                    <RelativeLayout
                        android:id="@+id/detail_column_header"
                        android:layout_width="match_parent"
                        android:layout_height="153dp"
                        android:background="@drawable/detail_top_bg">


                        <TextView
                            android:id="@+id/detail_column_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9.5dp"
                            android:layout_marginTop="47dp"
                            android:fontFamily="@font/fzzcysk_zbjt"
                            android:lines="1"
                            android:textColor="@color/_000000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="钱塘江" />

                        <TextView
                            android:id="@+id/detail_column_mark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/detail_column_title"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/detail_column_title"
                            android:text="#起航号#"
                            android:textColor="@color/_d12324"
                            android:textSize="12dp" />


                        <TextView
                            android:id="@+id/detail_column_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/detail_column_title"
                            android:layout_marginLeft="9.5dp"
                            android:layout_marginTop="12dp"
                            android:ellipsize="end"
                            android:lines="2"
                            android:textColor="@color/_484848"
                            android:textSize="12sp"
                            tools:text="不仅是优美的，而且是有格调的美丽的长长的钱塘江不仅美格调的美丽的长长的钱塘江不仅美格调的美丽的长长的钱塘江不仅美格调的美丽的长长的钱塘江不仅美格调的美丽的长长的钱塘江不仅美" />

                        <TextView
                            android:id="@+id/detail_column_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/detail_column_description"
                            android:layout_marginLeft="9.5dp"
                            android:layout_marginTop="16dp"
                            tools:text="文章数 0篇"
                            android:textColor="@color/_cfcfcf"
                            android:textSize="14sp"

                            />

                        <LinearLayout
                            android:id="@+id/subscribe_container"
                            android:layout_width="58dp"
                            android:layout_height="22dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/subscription_column_btn_selector"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/detail_column_sub_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/column_subscription_text_color_selector"
                                android:textSize="12sp"
                                tools:text="已订阅" />
                        </LinearLayout>
                    </RelativeLayout>
                </com.zjrb.core.ui.widget.ShadowLayout>

                <com.zjrb.core.ui.widget.ShadowLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_back"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="20dp"
                    app:shadowColor="#507c7c7c"
                    app:shadowDx="0dp"
                    app:shadowDy="2dp"
                    app:shadowRadius="4dp"
                    app:shadowShape="oval"
                    app:shadowSide="all">

                    <com.zjrb.core.ui.widget.CircleImageView
                        android:id="@+id/detail_column_imageView"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/column_placeholder_big"
                        app:border_color="@color/_ffffff"
                        app:border_width="2dp" />
                </com.zjrb.core.ui.widget.ShadowLayout>
            </RelativeLayout>


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <RelativeLayout
                    android:id="@+id/toolbar_rel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="10dp"
                        android:id="@+id/toolbar_detail_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/zjnews_back_red" />

                    <TextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxWidth="98dp"
                        android:text="栏目号"
                        android:textColor="@color/_000000_7a7b7d"
                        android:textSize="14sp"

                        />

                    <ImageView
                        android:id="@+id/toobar_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@+id/toolbar_title"

                        />

                    <ImageView
                        android:id="@+id/toolbar_detail_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="11.5dp"
                        android:scaleType="center"
                        android:src="@drawable/zjnews_detail_navigation_share_icon"
                        app:maskColor="@android:color/transparent" />

                    <ImageView
                        android:id="@+id/toolbar_detail_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:layout_toLeftOf="@+id/toolbar_detail_share" />
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>


    <fragment
        android:id="@+id/detail_article_fragment"
        android:name="com.daily.news.subscription.article.ArticleFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        android:layout="@layout/subscription_fragment_article"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"

        />

    <include
        android:id="@+id/detail_empty_error_container"
        layout="@layout/subscription_detail_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</android.support.design.widget.CoordinatorLayout>