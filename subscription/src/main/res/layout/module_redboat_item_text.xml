<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingMultiplier="@dimen/module_news_title_line_spacing_multiplier"
        android:maxLines="2"
        android:textColor="?attr/module_news_tc_item_title"
        android:textSize="@dimen/ts_16sp" />

    <TextView
        android:gravity="right"
        android:id="@+id/tv_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="middle"
        android:singleLine="true"
        android:textColor="?attr/module_news_color_999999_5c5c5c"
        android:textSize="@dimen/ts_11sp" />

</LinearLayout>