<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.daily.news.subscription.detail.DetailFragment">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height"
            android:background="@drawable/detail_column_default"
            android:paddingBottom="27dp"
            android:paddingLeft="11.5dp"
            android:paddingRight="11.5dp">

            <ImageView
                android:id="@+id/detail_column_imageView"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="9dp"
                android:src="@drawable/default_pic"/>

            <TextView
                android:id="@+id/detail_column_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/detail_column_imageView"
                android:layout_toEndOf="@+id/detail_column_imageView"
                android:layout_toLeftOf="@+id/frameLayout"
                android:layout_toRightOf="@+id/detail_column_imageView"
                android:lineSpacingExtra="1sp"
                android:text="钱塘江"
                android:textColor="#ffffff"
                android:textSize="19sp"/>

            <TextView
                android:id="@+id/detail_column_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_column_title"
                android:layout_toLeftOf="@+id/frameLayout"
                android:layout_toRightOf="@+id/detail_column_imageView"
                android:text="23.7万订阅"
                android:textColor="#c7c7c7"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/detail_column_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/frameLayout"
                android:layout_toRightOf="@+id/detail_column_imageView"
                android:ellipsize="end"
                android:lines="2"
                android:text="不仅是优美的，而且是有格调的美丽的长长的钱塘江不仅美格调的美丽的长长的钱塘江不仅美格调的美丽的长长的钱塘江不仅美格调的美丽的长长的钱塘江不仅美格调的美丽的长长的钱塘江不仅美"
                android:textColor="#e8e8e8"
                android:textSize="11sp"/>

            <LinearLayout
                android:id="@+id/frameLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/detail_column_imageView"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/detail_column_sub_btn"
                    android:layout_width="76.5dp"
                    android:layout_height="35dp"
                    android:background="@drawable/detail_sub_btn"
                    android:drawableLeft="@drawable/detail_sub_left_pic"
                    android:drawablePadding="0dp"
                    android:gravity="center"
                    android:padding="8.5dp"
                    android:text="已订阅"
                    android:textColor="@color/detail_btn_text_color_selector"
                    android:textSize="14sp"
                    />
            </LinearLayout>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/detail_article_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_column_progressBar_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/detail_column_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/detail_column_tip_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中..."/>
    </LinearLayout>
</FrameLayout>