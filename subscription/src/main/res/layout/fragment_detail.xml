<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.daily.news.subscription.detail.DetailFragment">


    <RelativeLayout
        android:paddingBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:background="@android:color/darker_gray">

        <ImageView
            android:id="@+id/detail_column_imageView"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            app:srcCompat="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/detail_column_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/detail_column_imageView"
            android:layout_toEndOf="@+id/detail_column_imageView"
            android:layout_toRightOf="@+id/detail_column_imageView"
            android:lineSpacingExtra="1sp"
            android:textColor="#ffffff"
            android:textSize="19sp"
            android:text="钱塘江"/>

        <TextView
            android:id="@+id/detail_column_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/detail_column_title"
            android:layout_alignRight="@+id/detail_column_title"
            android:layout_below="@+id/detail_column_title"
            android:textColor="#c7c7c7"
            android:textSize="11sp"
            android:text="23.7万订阅"/>

        <TextView
            android:id="@+id/detail_column_article_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/detail_column_count"
            android:layout_alignBottom="@+id/detail_column_count"
            android:layout_toEndOf="@+id/detail_column_title"
            android:layout_toLeftOf="@+id/frameLayout"
            android:layout_toRightOf="@+id/detail_column_title"
            android:lineSpacingExtra="8sp"
            android:textColor="#c7c7c7"
            android:textSize="11sp"
            android:text="2008篇稿件"/>

        <TextView
            android:id="@+id/detail_column_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/detail_column_count"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/detail_column_count"
            android:layout_toLeftOf="@+id/frameLayout"
            android:layout_toStartOf="@+id/frameLayout"
            android:textColor="#e8e8e8"
            android:textSize="11sp"
            android:text="不仅是优美的，而且是有格调的\n美丽的长长的钱塘江不仅美丽…"/>

        <LinearLayout
            android:id="@+id/frameLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/detail_column_imageView"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_column_sub_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="已订阅"
                />
        </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/detail_articles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</LinearLayout>
