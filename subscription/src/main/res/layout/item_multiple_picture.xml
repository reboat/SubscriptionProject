<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/multiple_picture_article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/multiple_picture_imageView1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/multiple_picture_imageView2"
            android:layout_width="match_parent"
            android:layout_height="75dp"

            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/multiple_picture_imageView3"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher"/>
    </LinearLayout>

    <TextView
        android:id="@+id/multiple_picture_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="1.4万人阅读"
        android:textColor="#999999"
        android:textSize="11sp"/>
</LinearLayout>