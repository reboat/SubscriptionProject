<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/item_article_background"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
    >

    <ImageView
        android:id="@+id/article_imageView"
        android:layout_width="117dp"
        android:layout_height="78dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="11dp"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/article_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="14dp"
        android:layout_toRightOf="@+id/article_imageView"
        android:ellipsize="end"
        android:lines="2"
        android:text="张高丽夏宝龙车俊对温州倒房作出批做要求全力搜救要求全力搜救要求全搜救要求全搜救要求全搜救要求全搜救要求全搜救要求全搜救要求全"
        android:textColor="@color/article_title_color"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/article_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/article_imageView"
        android:layout_marginRight="14dp"
        android:layout_toEndOf="@+id/article_imageView"
        android:layout_toRightOf="@+id/article_imageView"
        android:orientation="horizontal"
        android:text="7233万阅读"
        android:textColor="@color/article_info_color"
        android:textSize="11sp"/>
</RelativeLayout>