<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >






    <TextView
        android:id="@+id/rank"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="1"
        android:textSize="@dimen/ts_16sp"
        android:textColor="@color/_bfbfbf"
        android:layout_marginTop="50dp"
        android:layout_centerVertical="true"
        />



    <ImageView
        android:id="@+id/column_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@+id/padding_view"
        app:srcCompat="@drawable/column_placeholder_big"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"


        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/column_imageView"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="160dp"
        >

        <TextView
            android:id="@+id/column_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="文化印象"
            android:textColor="@color/_222222"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/column_info_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="简介信息"
            android:textColor="@color/_bfbfbf"
            android:textSize="12sp" />
    </LinearLayout>

        <TextView
            android:id="@+id/hot"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="334"
            android:textColor="@color/_222222"
            android:textSize="@dimen/ts_14sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="93dp"
            />

        <ImageView
            android:id="@+id/cnange"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:src="@drawable/zjnews_qihang_up_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:scaleType="center"
            />


</RelativeLayout>