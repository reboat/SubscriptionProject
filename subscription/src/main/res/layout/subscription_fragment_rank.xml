<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_ffffff"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        >

        <LinearLayout
            android:id="@+id/tab_bar"
            android:layout_width="92dp"
            android:layout_height="24dp"
            android:background="@drawable/module_sub_bg_tab_layout"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"

            >

            <FrameLayout
                android:id="@+id/tab_week_bar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/module_sub_bg_tab_item"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="周度"
                    android:textColor="@color/module_sub_tab_tc_text"
                    android:textSize="@dimen/ts_12sp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/tab_month_bar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/module_sub_bg_tab_item">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="月度"
                    android:textColor="@color/module_sub_tab_tc_text"
                    android:textSize="@dimen/ts_12sp" />

            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/classify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起航号总榜"
            android:layout_centerInParent="true"
            android:textColor="@color/_222222"
            android:textSize="@dimen/ts_14sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/all_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="所有排名"
            android:layout_marginRight="10dp"
            android:textColor="@color/_222222"
            android:textSize="12dp"
            android:drawableRight="@drawable/arrow"
            android:drawablePadding="5dp"

            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/rank_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="排名"
            android:layout_marginLeft="15dp"
            android:textColor="@color/_bfbfbf"
            android:textSize="@dimen/ts_12sp"

            />
        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起航号名称"
            android:layout_marginLeft="120dp"
            android:textColor="@color/_bfbfbf"
            android:textSize="@dimen/ts_12sp"
            />

        <TextView
            android:id="@+id/hot_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热度指数"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:textColor="@color/_bfbfbf"
            android:textSize="@dimen/ts_12sp"
            />
        <TextView
            android:id="@+id/change_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="变化"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="@color/_bfbfbf"
            android:textSize="@dimen/ts_12sp"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:scrollbars="none"
        android:background="@color/_ffffff_202124"
        />

</LinearLayout>