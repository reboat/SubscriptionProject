<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:baselineAligned="false"
              android:divider="?android:attr/dividerHorizontal"
              android:orientation="horizontal"
              android:showDividers="middle"
              tools:context="com.daily.news.subscription.more.MoreActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/more_category_list"
        android:name="com.daily.news.subscription.more.MoreListFragment"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.daily.news.subscription.more.MoreListActivity"
        tools:listitem="@layout/item_category"/>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/more_category_detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:background="@color/category_divider_color"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>
