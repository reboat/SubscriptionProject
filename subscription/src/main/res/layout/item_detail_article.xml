<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/detail_article_imageView"
        android:layout_width="96dp"
        android:layout_height="72.5dp"
        app:srcCompat="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/detail_article_brief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/detail_article_imageView"
        android:layout_toRightOf="@+id/detail_article_imageView"
        android:text="芒果党不可错过的芒果摩斯～"
        android:textColor="#484848"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/detail_article_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/detail_article_imageView"
        android:layout_toEndOf="@+id/detail_article_imageView"
        android:layout_toRightOf="@+id/detail_article_imageView"
        android:text="7233万阅读"
        android:textColor="#999999"
        android:textSize="11sp"/>

    <TextView
        android:id="@+id/detail_article_good_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/detail_article_count"
        android:layout_alignBottom="@+id/detail_article_count"
        android:layout_toEndOf="@+id/detail_article_count"
        android:layout_toRightOf="@+id/detail_article_count"
        android:text="6432点赞"
        android:textColor="#999999"
        android:textSize="11sp"/>
</RelativeLayout>